<div class="container">
  <h2>Latest post</h2>
    <div>
      <%= link_to @posts.last.name, post_path(post) %>
      <%= @posts.last.name %>
      <%= @posts.last.body %>
    </div>

  <h2>Past posts</h2>
    <% @posts.order(created_at: :desc)[1..-1].each do |post| %>
        <div>
          <%= post.name %>
          <%= post.body %>
        </div>
    <% end %>
</div>

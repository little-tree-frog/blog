<h1>Edit your post</h1>

<%= form_for(@post) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :body %>
  <%= f.text_field :body %>
  <%= f.submit %>
<% end %>

<%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: "Do you want to delete this post?" } %>
